# Copy this file to .env and fill in your credentials.
# SMTP for Mandrill or SendGrid (transactional SMTP)
SMTP_HOST=smtp.mandrillapp.com        # or smtp.sendgrid.net
SMTP_PORT=587                         # 465 for SSL, 587 for STARTTLS
SMTP_USER=YOUR_SMTP_USERNAME          # Mandrill API key or SendGrid 'apikey'
SMTP_PASS=YOUR_SMTP_PASSWORD          # Mandrill API key or SendGrid API key
FROM_EMAIL=notifications@yourdomain.com
FROM_NAME=Awon Notifications
REPLY_TO=support@yourdomain.com

# Optional: rate limiting (per minute). With concurrency=3, this is conservative.
MAX_PER_MINUTE=120
CONCURRENCY=3

# Unsubscribe defaults (can be overridden per-recipient in CSV if you have unique links)
UNSUBSCRIBE_URL=https://yourdomain.com/unsubscribe
UNSUBSCRIBE_MAILTO=unsubscribe@yourdomain.com
